@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments List";
}

<div class="container p-3">
    <div class="row  pt-4">
        <div class="col-6">
            <h2 class="text-primary"><i class="bi bi-card-checklist"></i> Department List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Department" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Create</a>
            </div>
        </div>
        <br /><br />


        <table id="dataTable" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="20%">
                            @if (@obj.Active)
                            {
                                <img src="./img/ok.png" width:15px; height=15px;>
                            }
                            else
                            {
                                <img src="./img/delete.png" width:15px; height=15px;>
                            }
                        </td>
                     <td>
                        <a title="Edit" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a title="Delete" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @section Scripts{
        <script>
        $(document).ready( function () {
        $('#dataTable').DataTable();
        } );
        </script>

    }