@using ERP.Models.Models.VM
@model JobOpeningViewModel
 @{ Layout = null; }
<style>
    .slider-area{
         style="background-image: url('https://themewagon.github.io/jobentry/img/carousel-1.jpg');
            height: 100vh">
    }
    </style>
@*@{
 Layout = "~/Views/Shared/_Layout.cshtml";
}*@
<link href="~/css/job/styleJob.css" rel="stylesheet">
   <link rel="stylesheet" href="~/css/job/assets/css/bootstrap.min.css">
   <link rel="stylesheet" href="~/css/job/assets/css/owl.carousel.min.css">
   <link rel="stylesheet" href="~/css/job/assets/css/flaticon.css">
   <link rel="stylesheet" href="~/css/job/assets/css/slicknav.css">
   <link rel="stylesheet" href="~/css/job/assets/css/price_rangs.css">
   <link rel="stylesheet" href="~/css/job/assets/css/animate.min.css">
   <link rel="stylesheet" href="~/css/job/assets/css/magnific-popup.css">
   <link rel="stylesheet" href="~/css/job/assets/css/fontawesome-all.min.css">
   <link rel="stylesheet" href="~/css/job/assets/css/themify-icons.css">
   <link rel="stylesheet" href="~/css/job/assets/css/slick.css">
   <link rel="stylesheet" href="~/css/job/assets/css/nice-select.css">

<!-- TEMP Area Start-->
        <!-- Hero Area Start-->
        <div class="slider-area ">
        <div class="single-slider section-overly slider-height2 d-flex align-items-center" data-background="../img/hiring-banner.png">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>@Model.JobOpening.JobTitle</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <!-- Hero Area End -->
        <!-- job post company Start -->
        <div class="job-post-company pt-120 pb-120">
            <div class="container">
                <div class="row justify-content-between">
                    <!-- Left Content -->
                    <div class="col-xl-7 col-lg-8">
                        <!-- job single -->
                        <div class="single-job-items mb-50">
                            <div class="company-img company-img-details">
                                    <a href="#"><img src="@Model.JobOpening.ImageUrl" height=80%; width=80%; alt="Job"></a>
                                </div>
                            <div class="job-items">
                                <div class="job-tittle">
                                    <a href="#">
                                        <h4>@Model.JobOpening.Department.Name</h4>
                                    </a>
                                    <ul>
                                        <li>@Model.JobOpening.JobPosition.Name</li>
                                        <li><i class="fas fa-map-marker-alt"></i>@Model.JobOpening.JobType</li>
                                        <li>$ @Model.JobOpening.Salary</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                          <!-- job single End -->
                       
                        <div class="job-post-details">
                            <div class="post-details1 mb-50">
                                <!-- Small Section Tittle -->
                                <div class="small-section-tittle">
                                    <h4>Job Description</h4>
                                </div>
                                <p>@Html.Raw(@Model.JobOpening.JobDescription)</p>
                            </div>
                            <div class="post-details2  mb-50">
                                 <!-- Small Section Tittle -->
                                <div class="small-section-tittle">
                                    <h4>Required Knowledge, Skills, and Abilities</h4>
                                </div>
                               <p>
                                   @Html.Raw(@Model.JobOpening.Skills)
                               </p>
                            </div>
                            <div class="post-details2  mb-50">
                                 <!-- Small Section Tittle -->
                                <div class="small-section-tittle">
                                    <h4>Education + Experience</h4>
                                </div>
                               <p>
                                  @Html.Raw(@Model.JobOpening.Education)
                               </p>
                            </div>
                        </div>

                    </div>
                    <!-- Right Content -->
                    <div class="col-xl-4 col-lg-4">
                        <div class="post-details3  mb-50">
                            <!-- Small Section Tittle -->
                           <div class="small-section-tittle">
                               <h4>Job Overview</h4>
                           </div>
                          <ul>
                              <li>Posted date : <span>@DateTime.Now.ToString("yyyy-MM-dd")</span></li>
                              <li>Location : <span>Managua, Nicaragua</span></li>
                              <li>Vacancy : <span>@Model.JobOpening.Vacancy</span></li>
                              <li>Job nature : <span>@Model.JobOpening.JobType</span></li>
                              <li>Salary :  <span>$@Model.JobOpening.Salary monthly</span></li>
                              <li>Application Expire : <span>@Model.JobOpening.Expire.ToString("yyyy-MM-dd")</span></li>
                          </ul>
                         <div class="apply-btn2">
                            <a asp-controller="JobApplication" asp-action="Upsert" class="btn">Apply Now</a>
                             <a asp-action="Index" class="btn">Retur Home</a>
                         </div>
                       </div>
                        <div class="post-details4  mb-50">
                            <!-- Small Section Tittle -->
                           <div class="small-section-tittle">
                               <h4>Company Information</h4>
                           </div>
                              <span>Company Name</span>
                              <p>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>
                            <ul>
                                <li>Name: <span>Contact Name </span></li>
                                <li>Web : <span> company.com</span></li>
                                <li>Email: <span>@Model.JobOpening.Email</span></li>
                            </ul>
                       </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- job post company End -->

<!-- TEMP Area End -->
