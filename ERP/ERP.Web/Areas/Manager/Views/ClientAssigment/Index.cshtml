@model IEnumerable<ClientAssigment>
@{
    ViewData["Title"] = "Client Assigment List";
    
}

<div class="container p-3">
    <div class="row  pt-4 alert alert-dark">
        <div class="col-6">
            <h2 class="text-primary"><i class="bi bi-card-list"></i> Client Assigment List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ClientAssigment" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Create</a>
            </div>
        </div>
        <br /><br />


        <table id="dataTable" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Department</th>
                    <th>Assigned To</th>
                    <th>Position</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%"><a asp-area="Sales" asp-controller="Client" asp-action="Details" asp-route-id="@obj.ClientId">@obj.Client.BusinessName</a></td>
                        <td width="10%">@obj.Department.Name</td>
                        <td width="25%">@obj.Employee.Name</td>
                        <td width="10%">@obj.JobPosition.Name</td>
                     <td>
                       <a title="Edit" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>  
                       <form asp-action="Delete" asp-route-id="@obj.Id" method="post" style="display: initial;"><a asp-action="Delete" asp-route-id="@obj.Id" type="submit" title="Delete" onclick="return confirm('Are you sure you want to delete this Note?')" class="btn btn-danger"><i class="fa fa-trash remove-note"></i></a></form>
                       <a title="Detais" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-info"><i class="bi bi-list-columns"></i> </a>  
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @section Scripts{
        <script>
        $(document).ready( function () {
        $('#dataTable').DataTable();
        } );
        </script>

    }