@model IEnumerable<TaskAssigment>
@{
    ViewData["Title"] = "Task Assigment List";
    
}

<div class="container p-3">
    <div class="row  pt-4 alert alert-dark">
        <div class="col-12">
            <h2 class="text-primary"><i class="bi bi-person-vcard"></i> Tasks</h2>
            <div class="text-end" style="margin-top: -41px";>
                <a asp-controller="TaskAssigment" asp-action="TaskAssigmentList" asp-route-status="true" class="btn btn-primary"><i class="bi bi-funnel"></i> Completed</a>
                <a asp-controller="TaskAssigment" asp-action="TaskAssigmentList" asp-route-status="false" class="btn btn-success"><i class="bi bi-funnel"></i> Pending</a>
                <a asp-controller="TaskAssigment" asp-action="TaskAssigmentList" asp-route-status="all" class="btn btn-light"><i class="bi bi-funnel"></i> All</a>
            </div>
            </div>
        </div>
        <br /><br />


        <table id="dataTable" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Task</th>
                    <th>Client</th>
                    <th>Assigned To</th>
                    <th>Due Date</th>
                    <th>Closed?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="18%"><a asp-action="Details" asp-route-id="@obj.Id">@obj.Tasks.Name</a></td>
                        <td width="20%"><a asp-area="Sales" asp-controller="Client" asp-action="Details" asp-route-id="@obj.ClientId">@obj.Client.BusinessName</a></td>
                        <td width="10%">@obj.Employee.WorkEmail</td>
                        <td width="15%">@((obj.DueDate.ToString("yyyy-MM-dd")))</td>
                        <td width="10%">
                            @if (@obj.Closed)
                            {
                                <img src="~/img/ok.png" width:15px; height=15px;>
                            }
                            else
                            {
                                <img src="~/img/delete.png" width:15px; height=15px;>
                            }
                        </td>
                     <td>
                        <a title="Edit" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                         @if (@obj.Closed)
                         {
                            <a title="mark pending" asp-action="ChangeStatus" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-exclamation-octagon-fill"></i> </a>
                        }
                        else
                        {
                            <a title="mark closed" asp-action="ChangeStatus" asp-route-id="@obj.Id" class="btn btn-warning"><i class="bi bi-bookmark-check-fill"></i> </a>
                        }
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @section Scripts{
        <script>
        $(document).ready( function () {
        $('#dataTable').DataTable();
        } );
        </script>

    }