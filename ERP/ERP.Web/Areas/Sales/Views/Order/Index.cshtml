@model IEnumerable<Order>
@{
    ViewData["Title"] = "Order List";
    
}

<div class="container p-3">
    <div class="row  pt-4 alert alert-dark">
        <div class="col-6">
            <h2 class="text-primary"><i class="bi bi-card-list"></i> Order List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Order" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Create</a>
            </div>
        </div>
        <br /><br />


        <table id="dataTable" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Client</th>
                    <th>Service</th>
                    <th>Billing Date</th>
                    <th>Paid?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="15%">@obj.Reference</td>
                        <td width="20%">@obj.Client.BusinessName</td>
                        <td width="20%">@obj.Service.Name</td>
                        <td width="15%">@((obj.BillingDate.ToString("yyyy-MM-dd")))</td>
                        <td width="5%">
                            @if (@obj.Paid)
                            {
                                <img src="~/img/ok.png" width:15px; height=15px;>
                            }
                            else
                            {
                                <img src="~/img/delete.png" width:15px; height=15px;>
                            }
                        </td>
                     <td>
                        <a title="Edit" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                         @if (@obj.Closed)
                         {
                            <a title="Open" asp-action="Close" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-node-plus"></i></a>
                        }
                        else
                        {
                            <a title="Close" asp-action="Close" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-x-circle"></i> </a>
                        }
                         @if (@obj.Paid)
                         {
                            <a title="Refund" asp-action="Paid" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-backspace"></i> </a>
                        }
                        else
                        {
                            <a title="Pay" asp-action="Paid" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-cash-coin"></i> </a>
                        }
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @section Scripts{
        <script>
        $(document).ready( function () {
        $('#dataTable').DataTable();
        } );
        </script>

    }