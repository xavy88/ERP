@model IEnumerable<Client>
@{
    ViewData["Title"] = "Client List";
    
}

<div class="container p-3">
    <div class="row  pt-4 alert alert-dark">
        <div class="col-6">
            <h2 class="text-primary"><i class="bi bi-person-badge"></i> Client List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Client" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Create</a>
            </div>
        </div>
        <br /><br />


        <table id="dataTable" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="32%">@obj.BusinessName</td>
                        <td width="30%">@obj.BusinessEmail</td>
                        <td width="15%">@obj.BusinessPhone</td>
                        @*<td width="10%"><a href=@obj.Url> @obj.Url</a></td>*@
                        <td width="10%">
                            @if (@obj.Active)
                            {
                                <img src="~/img/ok.png" width:15px; height=15px;>
                            }
                            else
                            {
                                <img src="~/img/delete.png" width:15px; height=15px;>
                            }
                        </td>
                     <td>
                        <a title="Edit" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                         @if (@obj.Active)
                         {
                            <a title="Delete" asp-action="ChangeStatus" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                        }
                        else
                        {
                            <a title="Recover" asp-action="ChangeStatus" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-node-plus"></i> </a>
                        }
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @section Scripts{
        <script>
        $(document).ready( function () {
        $('#dataTable').DataTable();
        } );
        </script>

    }