@using ERP.Utility
@model IEnumerable<PayRollOrder>
@{
    ViewData["Title"] = "Pay Roll List";
    
}

<div class="container p-3">
    <div class="row  pt-4 alert alert-dark">
        <div class="col-6">
            <h2 class="text-primary"><i class="bi bi-calendar4-week"></i> Pay Roll List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="PayRollOrder" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-calendar-plus"></i> Create</a>
            </div>
        </div>
        <br /><br />


        <table id="dataTable" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Sequence</th>
                    <th>Month</th>
                    <th>Year</th>
                    <th>Payment Day</th>
                    <th>Paid</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%"><a asp-controller="PayRollDetail" asp-action="RollDetails" asp-route-id="@obj.Id">@obj.Reference</a></td>
                        <td width="5%">@obj.Sequence</td>
                        <td width="10%">@obj.Month</td>
                        <td width="10%">@obj.Year</td>
                        <td width="10%">@((obj.PayentDate.ToString("yyyy-MM-dd")))</td>
                        <td width="5%">
                            @if (@obj.Paid)
                            {
                                <img src="~/img/ok.png" width:15px; height=15px;>
                            }
                            else
                            {
                                <img src="~/img/delete.png" width:15px; height=15px;>
                            }
                        </td>
                     <td width="17%">
                         @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_HR))
                        {
                            <a title="Edit" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                            @if (!@obj.Paid)
                            {
                                <a title="Approval Payment" asp-action="Paid" asp-route-id="@obj.Id" class="btn btn-warning"><i class="bi bi-cash-coin"></i></a>
                            }
                            @if (!@obj.Closed)
                            {
                                <a title="Close" asp-action="Closed" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-archive-fill"></i></a>
                            }
                            <a title="Generate Details" asp-action="InsertDetails" asp-route-id="@obj.Id" class="btn btn-info"><i class="bi bi-person-add"></i> </a>
                        }
                        else
                        {
                            <a title="Detail" asp-controller="PayRollDetail" asp-action="RollDetails" asp-route-id="@obj.Id" class="btn btn-success"><i class="bi bi-eyeglasses"></i> </a>
                        }
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @section Scripts{
        <script>
        $(document).ready( function () {
        $('#dataTable').DataTable();
        } );
        </script>

    }