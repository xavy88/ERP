@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles List";
    
}

<div class="container p-3">
    <div class="row  pt-4 alert alert-dark">
        <div class="col-6">
            <h2 class="text-primary"><img class="icon-img" src="~/img/icons/roles.png" /> Roles List</h2>
            </div>
            <div class="col-6 text-end">
            <a asp-controller="Role" asp-action="Upsert" class="btn btn-primary"><img class="icon-img" src="~/img/icons/crud/add.png" /> Create</a>
            </div>
        </div>
        <br /><br />


        <table id="dataTable" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Id</td>
                        <td width="30%">@obj.Name</td>
                     <td width="15%">
                         <form asp-action="Delete" asp-route-id="@obj.Id">
                            <a title="Edit" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-success"><img class="icon-img-crud" src="~/img/icons/crud/edit.png" /> </a>
                            <button type="submit" title="Delete" onclick="return confirm('Are you sure you want to delete this role?')" class="btn btn-danger"><img class="icon-img-crud" src="~/img/icons/crud/delete.png" /></button>
                        </form>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @section Scripts{
        <script>
        $(document).ready( function () {
        $('#dataTable').DataTable();
        } );
        </script>

    }