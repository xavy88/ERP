@using ERP.Models.Models.VM
@model RegisterViewModel
<style>
.card-body
{
    display: contents;
}
</style>

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5" style="display: contents;">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form asp-action="Register" class="mx-1 mx-md-4" method="post">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input asp-for="Name" type="text" id="form3Example1c" class="form-control" />
                      <label asp-for="Name" class="form-label" for="form3Example1c">Your Name</label>
                      <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input asp-for="Email" type="email" id="form3Example3c" class="form-control" />
                      <label asp-for="Email" class="form-label" for="form3Example3c">Your Email</label>
                      <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input asp-for="Password" type="password" id="form3Example4c" class="form-control" />
                      <label asp-for="Password" class="form-label" for="form3Example4c">Password</label>
                      <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input asp-for="ConfirmPassword" type="password" id="form3Example4cd" class="form-control" />
                      <label asp-for="ConfirmPassword" class="form-label" for="form3Example4cd">Repeat your password</label>
                      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                  </div>

                   <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <select asp-for="RoleSelected" id="form3Example4ce" asp-items="@Model.RoleList" class="form-control">
                      <option disabled selected>-- Select a Role --</option>
                      <span asp-validation-for="RoleSelected" class="text-danger"></span>
                      </select>
                    </div>
                  </div>
                  <!--
                  <div class="form-check d-flex justify-content-center mb-5">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                    <label class="form-check-label" for="form2Example3">
                      I agree all statements in <a href="#!">Terms of service</a>
                    </label>
                  </div>
                  -->
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg form-control">Register</button>
                  </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://img.freepik.com/free-vector/bank-login-concept-illustration_114360-7964.jpg?w=2000"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}