@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "User List";

}

<div class="container p-3">
    <div class="row  pt-4 alert alert-dark">
        <div class="col-6">
            <h2 class="text-primary"><i class="bi bi-person-video2"></i> User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Create</a>
        </div>
    </div>
    <br /><br />


    <table id="dataTable" class="table table-bordered table-striped" style="width:100%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td width="40%">@obj.Email</td>
                    <td width="10%">@obj.Role</td>

                    <td>

                        <form asp-action="Delete" asp-route-userId="@obj.Id">
                            <a title="Edit" asp-action="Edit" asp-route-userId="@obj.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>

                            @if (obj.LockoutEnd == null || obj.LockoutEnd < DateTime.Now)
                            {
                                //we want to show them the option to lock
                                <button asp-action="LockUnlock" asp-route-userId="@obj.Id" class="btn btn-primary text-white"
                                style="cursor:pointer">
                                    <i class="bi bi-person-fill-lock"></i>
                                </button>
                            }
                            else
                            {
                                //we want to show them the option to unlock
                                <button asp-action="LockUnlock" asp-route-userId="@obj.Id" class="btn btn-warning text-white"
                                style="cursor:pointer">
                                    <i class="bi bi-unlock-fill"></i>
                                </button>
                            }

                            <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts{
<script>
    $(document).ready( function () {
    $('#dataTable').DataTable();
    } );
</script>

    }